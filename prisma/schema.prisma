generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TechStack {
  id        Int      @id @default(autoincrement())
  category  String   @unique
  items     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id        Int      @id @default(autoincrement())
  title     String
  date      String
  image     String
  link      String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryPhoto {
  id         Int      @id @default(autoincrement())
  title      String
  img        String
  date       String
  tags       String[]
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model SocialProfile {
  id        Int      @id @default(autoincrement())
  text      String
  icon      String
  bg        String
  link      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id             Int      @id @default(autoincrement())
  name           String
  icon           String
  description    String[]
  link           String?
  githubLink     String?
  imageUrl       String?
  techStack      String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
